<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button Content="Button"  HorizontalAlignment="Left" Height="74" Margin="603,56,0,0" VerticalAlignment="Top" Width="155" Click="OnClick"/>
        <StackPanel Margin="72,56,483.6,169" >
            <RadioButton x:Name="rbFemaleChampionship" Content="Žensko prvenstvo" HorizontalAlignment="Left" Margin="50" VerticalAlignment="Top" Height="21"/>
            <RadioButton x:Name="rbMaleChampionship" Content="Muško prvenstvo" HorizontalAlignment="Left" Margin="50,0" VerticalAlignment="Top"/>
        </StackPanel>


        <StackPanel Margin="338,56,219.6,169">
            <RadioButton x:Name="rbEnglish" Content="Engleski" HorizontalAlignment="Left" Margin="50" VerticalAlignment="Top" Height="18"/>
            <RadioButton x:Name="rbCroatian" Content="Hrvatski"  IsChecked="True" Margin="50,0"/>
        </StackPanel>

    </Grid>
</Window>
