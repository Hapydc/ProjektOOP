<UserControl x:Class="WpfApp.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp"
             mc:Ignorable="d" Height="126.255" Width="204.222"  Cursor="Hand">
    <Grid Margin="0,0,607,331" VerticalAlignment="Center">
        <Image x:Name="iconImage" Source="Resources\Images\FootballPlayerIcon.png" Margin="54,30,-147,-75"/>
        <Label x:Name="lblPlayerName" Content="{Binding Path=Name}" HorizontalAlignment="Center" Height="28" Margin="48,2,-162,-30" VerticalAlignment="Top" Width="114" MouseDown="lblPlayerName_MouseDown"/>
        <Label Content="{Binding Path=ShirtNumber}" HorizontalAlignment="Center" Height="27" Margin="72,80,-131,-107" VerticalAlignment="Top" Width="59"/>


    </Grid>
</UserControl>
