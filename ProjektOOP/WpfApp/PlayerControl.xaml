<UserControl x:Class="WpfApp.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <Label x:Name="lblPlayerName" Content="{Binding Player.Name} " HorizontalAlignment="Left" Height="39" Margin="48,51,0,0" VerticalAlignment="Top" Width="121"/>
        <Label x:Name="lblPlayerShirtNumber" Content="Label" HorizontalAlignment="Left" Height="46" Margin="48,142,0,0" VerticalAlignment="Top" Width="121"/>
        <Label x:Name="lblCaptain" Content="Label" HorizontalAlignment="Left" Height="51" Margin="48,242,0,0" VerticalAlignment="Top" Width="148"/>
        <Label x:Name="lblPosition" Content="Label" HorizontalAlignment="Left" Height="56" Margin="48,337,0,0" VerticalAlignment="Top" Width="195"/>

    </Grid>
</UserControl>
